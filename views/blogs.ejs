<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>All Blogs - Blogify</title>
</head>
<body>
    <%- include('./partials/nav') %>
    
    <div class="container mt-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-md-8">
                <h1>All Blogs</h1>
                <p class="text-muted">Discover amazing stories from our community</p>
            </div>
            <div class="col-md-4 text-end">
                <% if (locals.user) { %>
                    <a href="/blog/add-new" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Create New Blog
                    </a>
                <% } %>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="row mb-4">
            <div class="col-md-6">
                <form method="GET" action="/blog" class="d-flex">
                    <input 
                        type="text" 
                        name="search" 
                        class="form-control me-2" 
                        placeholder="Search blogs..." 
                        value="<%= search %>"
                    >
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
            <div class="col-md-6 text-end">
                <small class="text-muted">
                    Showing <%= blogs.length %> of <%= total %> blogs
                </small>
            </div>
        </div>

        <!-- Blog List -->
        <% if (blogs.length === 0) { %>
            <div class="text-center py-5">
                <i class="bi bi-journal-text text-muted" style="font-size: 4rem;"></i>
                <h3 class="mt-3 text-muted">No blogs found</h3>
                <p class="text-muted">
                    <% if (search) { %>
                        No blogs match your search "<%= search %>"
                    <% } else { %>
                        Be the first to create a blog!
                    <% } %>
                </p>
                <% if (locals.user) { %>
                    <a href="/blog/add-new" class="btn btn-primary">Create Your First Blog</a>
                <% } %>
            </div>
        <% } else { %>
            <div class="row">
                <% blogs.forEach(blog => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <% if (blog.coverImage) { %>
                                <img src="<%= blog.coverImage %>" class="card-img-top" alt="Blog cover" style="height: 200px; object-fit: cover;">
                            <% } else { %>
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="bi bi-journal-text text-muted" style="font-size: 3rem;"></i>
                                </div>
                            <% } %>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <a href="/blog/<%= blog._id %>" class="text-decoration-none text-dark">
                                        <%= blog.title %>
                                    </a>
                                </h5>
                                <p class="card-text text-muted flex-grow-1">
                                    <%= blog.body.length > 150 ? blog.body.substring(0, 150) + '...' : blog.body %>
                                </p>
                                <div class="mt-auto">
                                    <div class="d-flex align-items-center mb-2">
                                        <% if (blog.createdBy && blog.createdBy.profileImageURL) { %>
                                            <img src="<%= blog.createdBy.profileImageURL %>" alt="Profile" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
                                        <% } else { %>
                                            <div class="rounded-circle bg-secondary me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                                <i class="bi bi-person text-white"></i>
                                            </div>
                                        <% } %>
                                        <small class="text-muted">
                                            <%= blog.createdBy ? blog.createdBy.fullname : 'Unknown' %>
                                        </small>
                                    </div>
                                    <small class="text-muted">
                                        <%= new Date(blog.createdAt).toLocaleDateString('en-US', { 
                                            year: 'numeric', 
                                            month: 'short', 
                                            day: 'numeric' 
                                        }) %>
                                    </small>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary btn-sm">
                                        Read More
                                    </a>
                                    <% if (locals.user && blog.createdBy && user._id.toString() === blog.createdBy._id.toString()) { %>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/blog/edit/<%= blog._id %>" class="btn btn-outline-secondary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form action="/blog/delete/<%= blog._id %>" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this blog?')">
                                                <button type="submit" class="btn btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <nav aria-label="Blog pagination" class="mt-5">
                    <ul class="pagination justify-content-center">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="/blog?page=<%= currentPage - 1 %><%= search ? '&search=' + search : '' %>&limit=<%= limit %>">
                                    <i class="bi bi-chevron-left"></i> Previous
                                </a>
                            </li>
                        <% } %>
                        
                        <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="/blog?page=<%= i %><%= search ? '&search=' + search : '' %>&limit=<%= limit %>">
                                    <%= i %>
                                </a>
                            </li>
                        <% } %>
                        
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="/blog?page=<%= currentPage + 1 %><%= search ? '&search=' + search : '' %>&limit=<%= limit %>">
                                    Next <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        <% } %>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>
